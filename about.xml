<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tringmeLogo"
        android:layout_width="11dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/todo"
        android:maxWidth="300dip"
        android:scaleType="centerInside"
        android:src="@drawable/tringme150" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/myPrimaryLightColor"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mesibologo"
                android:layout_width="355dp"
                android:layout_height="118dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/chitchat"
                android:textColor="@color/white"
                android:textSize="72sp"
                />

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/_1_0_0"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:visibility="visible"

                />

            <TextView
                android:id="@+id/builddate"
                android:layout_width="424dp"
                android:layout_height="109dp"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/today"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:visibility="visible"

                />

            <TextView
                android:id="@+id/appDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/website"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:autoLink="web"
                android:text="@string/https_chitchat_co"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColorLink="@color/white" />


            <TextView
                android:id="@+id/tringmeSupportLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:autoLink="web"
                android:text="@string/http_tringmesupport_com"
                android:textAppearance="@android:style/TextAppearance.Small" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>