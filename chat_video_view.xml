<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/videoImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:contentDescription="@string/todo" />




    <RelativeLayout
        android:id="@+id/inVideoBufferRL"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:visibility="visible"
        tools:ignore="ExtraText">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/black"
            android:contentDescription="@string/todo" />
        />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_action_play_outline"
            android:visibility="gone"
            android:contentDescription="@string/todo" />
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/videoMessageTV"
        style="@style/chat_text_message_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoImageView"
        android:text="@string/ffvvv"
        android:textColor="@color/black_overlay"
        android:visibility="gone" />

</RelativeLayout>